{
  "name": "zk-circuit-editor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --config jest.config.cjs --passWithNoTests",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:e2e": "playwright test",
    "vercel-build": "next build",
    "postbuild": "npm run lint",
    "analyze": "cross-env ANALYZE=true next build",
    "verify-deployment": "node scripts/verify-deployment-setup.js",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:local-test": "npm run build && npm run start",
    "deploy:check": "npm run verify-deployment && npm run test && npm run lint",
    "deploy:help": "node scripts/deploy-helper.js",
    "demo": "node scripts/run-demo.js",
    "demo:guide": "npx http-server . -p 8080 -o demos/demo.html",
    "demo:simple": "echo 'Open http://localhost:3000 for main app' && echo 'Open demos/demo.html in browser for demo guide'",
    "production:test": "node scripts/test-production-playwright.js",
    "production:analyze": "node scripts/analyze-bundle.js",
    "production:deploy": "node scripts/deploy.js deploy",
    "production:status": "node scripts/deploy.js status",
    "production:rollback": "node scripts/deploy.js rollback",
    "production:logs": "node scripts/deploy.js logs"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-types": "^2.0.2",
    "@midnight-ntwrk/midnight-js-utils": "^2.0.2",
    "@midnight-ntwrk/onchain-runtime": "^0.3.0",
    "@midnight-ntwrk/wallet-sdk-address-format": "^2.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "critters": "^0.0.23",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser-webpack-plugin": "^5.3.14"
  }
}
